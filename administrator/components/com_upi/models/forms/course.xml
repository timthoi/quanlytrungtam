<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="course.form" addfieldpath="/administrator/components/com_upi/models/fields">

		<field name="title"
				alias="title"
				label="UPI_FIELD_TITLE"
				filter="STRING"
				type="cktext"
				required="true"
				class="validate[required]"/>

		<field name="alias"
				alias="alias"
				label="UPI_FIELD_ALIAS"
				filter="STRING"
				type="cktext"/>

		<field name="start_date"
				alias="start_date"
				label="UPI_FIELD_START_DATE"
				filter="STRING"
				type="ckcalendar"
				format="d-m-Y"/>

		<field name="end_date"
				alias="end_date"
				label="UPI_FIELD_END_DATE"
				filter="STRING"
				type="ckcalendar"
				format="d-m-Y"/>

		<field name="active"
				alias="active"
				label="UPI_FIELD_ACTIVE"
				filter="BOOL"
				listKey="value"
				type="ckradio"
				viewType="both">
			<option value="0" icon="icomoon-cancel" color="danger">UPI_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">UPI_FIELDS_BOOL_YES</option>
		</field>
		
		<field name="note"
				alias="note"
				label="UPI_FIELD_NOTE"
				filter="STRING"
				type="cktextarea"/>

		<field name="published"
				alias="published"
				label="UPI_FIELD_PUBLISHED"
				filter="INT"
				access="core.edit.state"
				listKey="value"
				default="1"
				type="ckstate">
			<option value="0" icon="icomoon-cancel" color="danger">UPI_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">UPI_FIELDS_BOOL_YES</option>
		</field>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_upi/models/fields">

		<field name="filter_start_date"
				type="ckcalendar"
				submit="true"
				placeholder="UPI_FILTER_NULL_START_DATE"
				format="d-m-Y"
				label="UPI_JSEARCH_START_DATE"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_end_date"
				type="ckcalendar"
				submit="true"
				placeholder="UPI_FILTER_NULL_END_DATE"
				format="d-m-Y"
				label="UPI_JSEARCH_END_DATE"
				class="element-filter"
				ui="chosen"/>

		<field name="search_search"
				type="cksearch"
				placeholder="UPI_FILTER_NULL_TITLE_ALIAS"
				label="UPI_JSEARCH_TITLE_ALIAS"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_upi/models/fields">

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>